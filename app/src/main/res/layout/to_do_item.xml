<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/to_do_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/to_do_item_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/icons">


            <TextView
                android:id="@+id/cv_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Супер идея"
                android:textColor="@color/primary_text"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/cv_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_tv_title"
                android:layout_marginBottom="20dp"
                android:text="Записать курс полноценного Android приложения"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/cv_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_tv_content"
                android:layout_marginBottom="16dp"
                android:text="22.09.2016"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/cv_tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/cv_tv_content"
                android:layout_marginBottom="16dp"
                android:text="Ideas"
                android:textColor="@color/accent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cv_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_tv_content"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@+id/cv_tv_date"
                android:layout_toRightOf="@+id/cv_tv_date"
                android:text="19:25:10"
                android:textSize="16sp"
                tools:ignore="RtlHardcoded" />


        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/to_do_item_lianer_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/icons"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/cv_tv_tag"
                    style="@style/AppTheme.TextTag"
                    android:background="@color/accent"
                    android:text="Friends" />


            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</android.support.v7.widget.CardView>

