<resources xmlns:android="urn:oasis:names:tc:xliff:document:1.2" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">true</item>
    </style>


    <style name="AppTheme.TextTag">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTheme.create_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">24dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.create_item_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">24dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">24dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>


</resources>
